<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to ProjectYC</h1>
                <p>This is a collaboratively edited question and answer site for professional and enthusiast yachties</p>
                    <form action="/question" method="GET" class="form-inline">
                        <div class="form-group">
                            <input type="text" name="search" placeholder="question search" class="form-control">
                            <input type="submit" value="search" class="btn btn-success">
                        </div>
                    </form>
                <div class="container popular-searches">
                    <p> Popular questions</p>
                    <div>
                        <form action="/question" method="GET" class="form-inline">
                            <% question.forEach(function(tag){ %>
                                <input type="submit" value="<%=tag.tag%>" name="tag" class="tag btn btn-outline-info btn-sm">
                        <% }) %>
                        </form>
                    </div>
                </div>    
                <div class="search-box">
                    <p>
                        <a class="btn btn-primary btn-lg" href="/question/new">Add a new question</a>
                    </p>
                </div>
                <div class="row justify-content-end">
                     <a id="search-return" href="/question">Go back</a>
                </div>
    </header>
    <div class="card-deck text-center question">
        <div class="col-md-9">
            <% if(noMatch !== null) { %>
            <h3><%= noMatch %></h3>
            <% } %>
        </div>
<div class="container">
    <!--<div class="row justify-content-end">-->
    <!--<div class="col-md-3">-->
    <!--        <p class="lead">Tags</p>-->
    <!--        <div class="list-group">-->
    <!--            <% question.forEach(function(tag){ %>-->
    <!--            <li class="list-group-item"><%=tag.tag%></li>-->
    <!--            <% }) %>-->
    <!--        </div>-->
    <!--</div>-->
        <% question.forEach(function(question){ %>
        <div class="col-md-12 col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <h4><%= question.name %></h4>
                    </div>
                    <p>
                        <%= question.description %>
                    </p>
                    <p>
                        <a href="/question/<%= question._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div> 
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>