<% include ../partials/header %>

<div class="container">
    <div class="blog-form-group">
        <h1 style="text-align:center">Edit <%= blog.name %></h1>
            <form action="/blog/<%=blog._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[name]" value="<%=blog.name%>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[image]" value="<%=blog.image%>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" maxlength="150" name="blog[description]" value="<%=blog.description%>"></input>
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="blog[text]" value="<%=blog.text%>" rows="10"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/blog">Go back</a>
        </div>
    </div>
</div>



<% include ../partials/footer %>