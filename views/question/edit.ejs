<% include ../partials/header %>

<div class="container">
    <div class="question-form-group">
        <h1 style="text-align:center">Edit <%= question.name %></h1>
            <form action="/question/<%=question._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="question[name]" value="<%=question.name%>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="question[image]" value="<%=question.image%>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" maxlength="150" name="question[description]" value="<%=question.description%>"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/question">Go back</a>
        </div>
    </div>
</div>



<% include ../partials/footer %>