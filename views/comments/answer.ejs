<% include ../partials/header %>


    <div class="form-group">
        <h1 style="text-align:center">Add a new comment to <%= question.name%> </h1>
        <div style="width:30%; margin: 30px auto;">
            <form action="/question/<%= question._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="answer[text]" placeholder="text"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/question">Go back</a>
        </div>
    </div>




<% include ../partials/footer %>