<% include ../partials/header %>

<div class="container">
    <div class="form-group">
        <h1 style="text-align:center">Add a new comment to <%= house.name%> </h1>
        <div style="width:30%; margin: 30px auto;">
            <form action="/housing/<%= house._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="author"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/housing">Go back</a>
        </div>
    </div>
</div>



<% include ../partials/footer %>