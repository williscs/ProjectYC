<% include partials/header %>

<div class="container">
    <div class="form-group">
        <h1 style="text-align:center">Create a new house </h1>
        <div style="width:30%; margin: 30px auto;">
            <form action="/housing" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/housing">Go back</a>
        </div>
    </div>
</div>



