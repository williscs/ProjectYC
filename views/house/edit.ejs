<% include ../partials/header %>

<div class="container">
    <div class="form-group">
        <h1 style="text-align:center">Edit <%= house.name %></h1>
        <div style="width:30%; margin: 30px auto;">
            <form action="/housing/<%=house._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="house[name]" value="<%=house.name%>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="house[image]" value="<%=house.image%>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="house[description]" value="<%=house.description%>"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/housing">Go back</a>
        </div>
    </div>
</div>



<% include ../partials/footer %>